<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReceiptActivity"
    android:orientation="vertical">

    <TextView
        android:fontFamily="@font/quicksand_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Biên nhận"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:fontFamily="@font/quicksand_medium"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@color/silver"
            android:text="Giá cước sửa chữa"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:fontFamily="@font/quicksand_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50,000"
            android:background="@color/silver"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:fontFamily="@font/quicksand_medium"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@color/silver"
            android:text="Phụ phí"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:fontFamily="@font/quicksand_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@color/silver"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/darksilver">

            <Button
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Huỷ"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_detail_review_button"
                android:onClick="clickToCancel"/>

            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="Tiến hành"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_detail_repairer_button"
                android:onClick="clickToReceipt"/>
        </LinearLayout>




    </LinearLayout>



</LinearLayout>