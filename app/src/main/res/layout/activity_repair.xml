<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RepairActivity"
    android:orientation="vertical"
    android:background="@color/darkbluesilver">



    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <ImageView
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_flag"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16A Tô Ký"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16A Tô Ký, Khu phố 2, P. Trung Mỹ Tây, Q.12"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_call"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tien"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0932018XXX"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Nhập giá sửa chữa"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_edit_text"/>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Ghi chú"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <EditText
        android:inputType="textMultiLine"
        android:lines="3"
        android:minLines="2"
        android:gravity="top|left"
        android:maxLines="4"
        android:layout_height="wrap_content"
        android:layout_width="350dp"
        android:scrollbars="vertical"
        android:layout_gravity="center"
        android:background="@drawable/custom_edit_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnAccept"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="10dp"
            android:background="@color/orangeDark"
            android:src="@drawable/ic_check_black_24dp"
            android:onClick="clickToAccept"/>


    </LinearLayout>





</LinearLayout>