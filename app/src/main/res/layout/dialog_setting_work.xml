<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_white_radius"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin hoạt động"
            android:fontFamily="@font/quicksand_medium"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="1"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giờ làm việc"
            android:fontFamily="@font/quicksand_medium"
            android:textSize="18sp"
            android:textColor="@color/silvermedium"
            android:layout_weight="1"
            android:paddingLeft="20dp"/>

        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/quicksand_medium"
            android:textStyle="bold"
            android:text="7 - 21"
            android:paddingRight="20dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightgray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phạm vi hoạt động"
            android:textColor="@color/silvermedium"
            android:fontFamily="@font/quicksand_medium"
            android:textSize="18sp"
            android:layout_weight="1"
            android:paddingLeft="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_medium"
            android:text="5"
            android:paddingRight="20dp"/>

    </LinearLayout>

    <Button
        android:fontFamily="@font/avenir_light"
        android:layout_marginTop="15dp"
        android:id="@+id/btn_dialog_call2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thay đổi"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/background_detail_repairer_button"
        android:layout_marginHorizontal="50dp"

        />




</LinearLayout>
