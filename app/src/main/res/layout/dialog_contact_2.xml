<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="40dp"
        android:background="#ECECEC">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repairer_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tinh"
            android:layout_gravity="center"

            />
        <TextView
            android:id="@+id/txt_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lâm Thanh Phát"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/txt_dialog_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa chữa đồ điện, uống nước"
            android:fontFamily="@font/quicksand_medium"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="7h - 18h"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_none"/>

        </LinearLayout>

        <Button
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_dialog_call2"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liên hệ"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/background_detail_repairer_button"
            android:layout_marginHorizontal="50dp"

            />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_review2"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem đánh giá"
            android:fontFamily="@font/quicksand_bold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:background="@drawable/background_detail_review_button"
            android:layout_marginHorizontal="50dp"
            />

    </LinearLayout>

  


</android.support.v7.widget.CardView>