<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ViewDetailErrorActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detail_error_view"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/dark"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Chi tiết"
        app:titleMarginStart="90dp"></android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/silver"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_contact_3"
                    android:orientation="vertical"
                    android:paddingHorizontal="25dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <TextView
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Bếp từ"
                        android:textColor="@color/colorPrimary"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/silver"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi tiết :"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />


                    <TextView
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:text="Thiết bị không hoạt động khi cắm điện"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/silver"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:background="@drawable/background_text_contact"
                    android:text="Thiết bị cần sửa"
                    android:paddingHorizontal="25dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:paddingVertical="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@color/white"
                android:background="@drawable/background_text_contact"
                android:text="Ảnh / Video chi tiết"
                android:paddingHorizontal="25dp"
                android:fontFamily="@font/quicksand_bold"
                android:paddingVertical="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"/>


            <ImageView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="300dp"
                android:src="@drawable/beptuhu"
                android:visibility="visible"/>

            <VideoView
                android:id="@+id/video_view_view"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                />



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical">
                <Button
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginTop="25dp"
                    android:onClick="acceptRepairView"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhận sửa"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/background_detail_repairer_button"
                    android:layout_marginHorizontal="50dp" />

                <Button
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginTop="10dp"
                    android:onClick="deny"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Từ chối"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_deny_button"
                    android:layout_marginHorizontal="50dp" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>