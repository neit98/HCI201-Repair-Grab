<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    android:orientation="vertical"
    tools:context=".activity.WaitingActivity">

    <TextView
        android:id="@+id/txt_waiting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:text="Đang tìm thợ cho bạn ..."
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/quicksand_bold"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="70dp"
        android:id="@+id/animation_waiting"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:lottie_rawRes="@raw/box"
        app:lottie_loop="true"
        android:layout_gravity="center_horizontal"
        tools:ignore="MissingConstraints" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="100dp"
        android:id="@+id/animation_success"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:lottie_rawRes="@raw/check"
        app:lottie_loop="true"
        android:layout_gravity="center_horizontal"
        tools:ignore="MissingConstraints"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal">
        <Button
            android:fontFamily="@font/quicksand_medium"
            android:layout_marginTop="25dp"
            android:id="@+id/btn_find_myselft"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tự tìm thợ"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/background_detail_repairer_button"
            android:layout_marginHorizontal="50dp" />

    </LinearLayout>


</LinearLayout>