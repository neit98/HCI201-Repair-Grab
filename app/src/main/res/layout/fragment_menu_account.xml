<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MenuAccount"
    android:background="@color/whitesilver"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/quankun"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        >
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lâm Thanh Phát"
            android:textSize="22sp"
            android:fontFamily="@font/quicksand_bold"

            />
        <TextView
            android:layout_gravity="left"
            android:id="@+id/tv_setting_user"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_light"
            />


    </LinearLayout>
    

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
          >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/makhuyenmai_ic"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="25dp"
                android:background="@color/white"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/doingonngu_ic"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="25dp"
                android:background="@color/white"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/help_center_ic"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="25dp"
                android:background="@color/white"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/caidat_ic"
                android:background="@color/white"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="25dp"
                android:layout_marginBottom="20dp"

                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rate_us_ic"
                android:background="@color/white"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="25dp"

                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Nhập mã khuyến mãi"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                android:gravity="left|center"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand_light"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Thay đổi ngôn ngữ"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                android:gravity="left|center"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand_light"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Help center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                android:gravity="left|center"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand_light"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Cài đặt"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingHorizontal="20dp"
                android:gravity="left|center"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand_light"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Rate us"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                android:gravity="left|center"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand_light"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:orientation="vertical"
        android:padding="30dp">

        <Button

            android:id="@+id/btnLogout"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Đăng xuất"
            android:background="@drawable/background_white_radius"/>


    </LinearLayout>






</LinearLayout>