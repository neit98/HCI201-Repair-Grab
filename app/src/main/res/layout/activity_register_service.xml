<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterServiceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_register"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/colorPrimary"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Đăng ký sửa chữa"
        app:titleMarginStart="50dp"></android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/silver"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_contact_3"
                    android:orientation="vertical"
                    android:paddingHorizontal="25dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn dịch vụ muốn đăng ký:"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thiết bị bếp"
                        android:fontFamily="@font/quicksand_medium"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thiết bị điện"
                        android:fontFamily="@font/quicksand_medium"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nước"
                        android:fontFamily="@font/quicksand_medium"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khoá"
                        android:fontFamily="@font/quicksand_medium"/>



                </LinearLayout>

                <TextView
                    android:textSize="15sp"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:background="@drawable/background_text_contact"
                    android:text="Dịch vụ"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_contact_3"
                    android:orientation="vertical"
                    android:paddingHorizontal="25dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ làm việc :"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_marginTop="5dp"
                           android:fontFamily="@font/quicksand_medium"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Từ :"
                           android:textColor="@color/colorPrimaryDark"
                          />
                       <Spinner
                           android:layout_marginTop="5dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:entries="@array/time"
                           android:gravity="center"></Spinner>

                       <TextView
                           android:layout_marginTop="5dp"
                           android:fontFamily="@font/quicksand_medium"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Đến :"
                           android:textColor="@color/colorPrimaryDark"
                           />

                       <Spinner
                           android:layout_marginTop="5dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:entries="@array/time"
                           android:gravity="center"></Spinner>
                   </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bán kính hoạt động :"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold" />


                        <Spinner
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/bankinh"
                            android:gravity="center"></Spinner>

                    </LinearLayout>



                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:background="@drawable/background_text_contact"
                    android:text="Thông tin hoạt động"
                    android:paddingHorizontal="25dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:paddingVertical="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_contact_3"
                    android:orientation="vertical"
                    android:paddingHorizontal="25dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Các điều khoản về dịch vụ"
                        android:textColor="@color/colorPrimaryDark"
                        />



                    <CheckBox
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="Tôi đồng ý các điều khoản về dịch vụ"/>





                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:background="@drawable/background_text_contact"
                    android:text="Điều khoản dịch vụ"
                    android:paddingHorizontal="25dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:paddingVertical="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="horizontal">
                <Button
                    android:onClick="register"
                    android:fontFamily="@font/quicksand_medium"
                    android:layout_marginTop="25dp"
                    android:id="@+id/btn_contact"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký sửa chữa"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/background_detail_repairer_button"
                    android:layout_marginHorizontal="50dp" />

            </LinearLayout>


        </LinearLayout>




    </ScrollView>


</LinearLayout>