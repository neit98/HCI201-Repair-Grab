<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:background="#ECECEC">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repairer_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/duy"
            android:layout_gravity="center"

            />
        <TextView
            android:id="@+id/txt_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trần Sang"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_none"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_contact_3"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:textSize="15sp"
                android:fontFamily="@font/quicksand_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@color/white"
                android:background="@drawable/background_text_contact"
                android:text="Báo giá sửa chữa"
                android:paddingHorizontal="20dp"
                android:paddingVertical="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />



            <TextView
                android:fontFamily="@font/quicksand_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:text="50.000 VNĐ"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="15sp" />


        </LinearLayout>


        <Button
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_chapnhan"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đồng ý"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/background_detail_repairer_button"
            android:layout_marginHorizontal="50dp"

            />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_tuchoi"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Từ chối"
            android:fontFamily="@font/quicksand_bold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:background="@drawable/background_detail_review_button"
            android:layout_marginHorizontal="50dp"
            />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_xemdanhgia"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem dánh giá"
            android:fontFamily="@font/quicksand_bold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:background="@drawable/background_detail_review_button"
            android:layout_marginHorizontal="50dp"
            />

    </LinearLayout>




</android.support.v7.widget.CardView>